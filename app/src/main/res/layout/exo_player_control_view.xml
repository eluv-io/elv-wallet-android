<?xml version="1.0" encoding="utf-8"?>

<!-- IMPORTANT! This layout contains ViewGroups that appear
redundant. However, Media3 is looking for specific ID's for UI show/hide logic and animations,
so be mindful of pruning the view hierarchy-->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 0dp dimensions are used to prevent this view from influencing the size of
         the parent view if it uses "wrap_content". It is expanded to occupy the
         entirety of the parent in code, after the parent's size has been
         determined. See: https://github.com/google/ExoPlayer/issues/8726.
    -->
    <View
        android:id="@id/exo_controls_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/exo_black_opacity_60" />

    <FrameLayout
        android:id="@id/exo_top_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="27dp">

        <TextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:text="Video Title" />
    </FrameLayout>

    <LinearLayout
        android:id="@id/exo_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="27dp"
        android:clipChildren="false"
        android:layoutDirection="ltr"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">
            <!-- Keep this to make sure play button hides with the rest of the elements -->
            <FrameLayout
                android:id="@id/exo_center_controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:gravity="center"
                android:layoutDirection="ltr">

                <app.eluvio.wallet.screens.videoplayer.ui.MediaGlowIconButton
                    android:id="@id/exo_play_pause"
                    style="@style/MediaPlayerCircleButton.PlayPause"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginEnd="12dp"
                    android:nextFocusLeft="@id/exo_progress"
                    android:nextFocusDown="@id/exo_bottom_bar" />
            </FrameLayout>

            <androidx.media3.ui.DefaultTimeBar
                android:id="@id/exo_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:nextFocusDown="@id/exo_bottom_bar"
                app:scrubber_dragged_size="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@id/exo_bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@id/exo_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <TextView
                    android:id="@id/exo_position"
                    style="@style/ExoStyledControls.TimeText.Position" />

                <TextView style="@style/ExoStyledControls.TimeText.Separator" />

                <TextView
                    android:id="@id/exo_duration"
                    style="@style/ExoStyledControls.TimeText.Duration" />

                <TextView
                    android:id="@+id/live_indicator"
                    style="@style/ExoStyledControls.TimeText.Position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/live_tag_bg"
                    android:nextFocusUp="@id/exo_play_pause"
                    android:nextFocusDown="@id/exo_progress"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="1dp"
                    android:text="LIVE"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <app.eluvio.wallet.screens.videoplayer.ui.MediaGlowTextButton
                    android:id="@+id/video_player_info_button"
                    style="@style/MediaPlayerTextButton"
                    android:layout_marginStart="12dp"
                    android:nextFocusUp="@id/exo_play_pause"
                    android:text="Info" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@id/exo_basic_controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:layoutDirection="ltr">

                <app.eluvio.wallet.screens.videoplayer.ui.MediaGlowTextButton
                    android:id="@+id/video_player_streams_button"
                    style="@style/MediaPlayerTextButton"
                    android:layout_marginEnd="12dp"
                    android:nextFocusUp="@id/exo_play_pause"
                    android:text="Stream Selector"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <app.eluvio.wallet.screens.videoplayer.ui.MediaGlowIconButton
                    android:id="@id/exo_subtitle"
                    style="@style/ExoStyledControls.Button.Bottom.CC"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:nextFocusUp="@id/exo_play_pause"
                    android:tint="@color/player_secondary_action_tint"
                    app:unfocusedBackgroundColor="@android:color/transparent" />

                <app.eluvio.wallet.screens.videoplayer.ui.MediaGlowIconButton
                    android:id="@id/exo_settings"
                    style="@style/MediaPlayerCircleButton.Settings"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:nextFocusUp="@id/exo_play_pause"
                    android:tint="@color/player_secondary_action_tint"
                    app:unfocusedBackgroundColor="@android:color/transparent" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</merge>
